<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/indice0"

    tools:context=".view.view.Index">

    <LinearLayout
        android:id="@+id/indice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">


        <Button
            android:id="@+id/menuIndex"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_sanduiche"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="8sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"

            >

            <Space
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">
            </Space>
            <Button
                android:id="@+id/bthome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:drawable/ic_menu_myplaces"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="24sp" />

            <Space  android:layout_width="5dp"
                android:layout_height="2dp" />

            <Button
                android:id="@+id/btanterior"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:drawable/ic_media_rew"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvMes"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:text="" />

            <Button
                android:id="@+id/btposterior"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:drawable/ic_media_ff"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="24sp" />


            <Space android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">
            </Space>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"></RelativeLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:contentDescription="alarme"
            android:src="@drawable/ic_alarme"
            app:backgroundTint="#FFFFFF"
            app:maxImageSize="50dp" />

        <Space android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:gravity="left"
            android:orientation="horizontal">
        </Space>
        <FrameLayout
            android:id="@+id/adView_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignParentBottom="true"
             >
        </FrameLayout>

    </LinearLayout>


</ScrollView>